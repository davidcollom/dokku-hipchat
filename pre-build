#!/usr/bin/env bash
set -eo pipefail; [[ $DOKKU_TRACE ]] && set -x
APP="$1"; IMAGE="$2";HOSTNAME=$(cat $DOKKU_ROOT/VHOST);
echo "-----> Notifying Hipchat ..."
echo "Starting Build for <a href=\"http://$APP.$HOSTNAME\">$APP ($HOSTNAME)</a>" | HIPCHAT_COLOR=yellow $PLUGIN_PATH/hipchat/hipchat >/dev/null
